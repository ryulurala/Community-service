<%- contentFor("scripts") %>
<!-- scripts 들어갈 내용(layout 에다가) -->

<%- contentFor("contents") %>
<!-- contents로 들어갈 내용(layout 에다가) -->
<% if(posts) { %>
<table>
  <tbody>
    <% for(i in posts) { %> <% if(posts[i].title) { %>
    <tr>
      <td style="text-align: left">
        제목:
        <a href="/page/board/<%= posts[i].id %>"> <%= posts[i].title %> </a>
      </td>
    </tr>
    <tr>
      <td style="text-align: left"><%= `내용: ${posts[i].content}` %></td>
    </tr>
    <% } else { %>
    <tr>
      <td>
        <a href="/page/gallery/<%= posts[i].id %>">
          <%= `사진 ${posts.length-i}` %>
        </a>
      </td>
    </tr>
    <tr>
      <td>
        <img src="<%= posts[i].content %>" width="250px" height="250px" />
      </td>
    </tr>
    <% } %>
    <tr>
      <td style="text-align: left">
        <%= `작성자: ${posts[i].author.nickname}` %>
      </td>
    </tr>
    <tr>
      <td style="text-align: left">
        <%= `작성일: ${posts[i].createdAt.toISOString()}` %>
      </td>
    </tr>
    <tr>
      <td>
        <hr />
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
<% } %>
